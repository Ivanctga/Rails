<%= form_with(model: post) do |post_form| %>
    <%= post_form.label :title %> <br>
    <%= post_form.text_field :title %> 
    <br> <br>
   

    <%= post_form.label :content %> <br>
    <%= post_form.text_area :content, size: "60x10" %> 
    <br> <br>
  

    <%= post_form.label :publish_at %> <br>
    <%= post_form.datetime_local_field :publish_at %> 
    <br> <br>  


    <%= post_form.label :author_id, 'Author' %> <br>
    <%= post_form.select :author_id, 
        Author.all.map { |a| [full_name(a), a.id] }, selected: post.author_id %>
    <br> <br>

<%= post_form.submit %> <br> <br>
    
    
<% end %>